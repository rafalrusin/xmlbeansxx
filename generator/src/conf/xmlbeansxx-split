usage="\
Split C++ (.cpp) files.

Usage: $0 file.cpp

file.cpp	- .cpp file to split

Report bugs to: <pst@touk.pl>
Copyright (C) 2004 TouK"

if test $# -eq 0; then
  echo "$usage"; exit 1
fi

basefile=$1
filename=`basename $basefile .cpp`

CPPFILE="$filename.cpp"
PREFIX=`/bin/tempfile`

csplit -f $PREFIX $CPPFILE /^\/\/\-\-split\-\-/+1 {\*} > /dev/null

NFILE="${PREFIX}??"
N0FILE="${PREFIX}00"


for i in $NFILE ;  do
	if [ $i = $N0FILE ] ; then 
		header=$i
		
		continue
	fi
	
	nr=`echo $i | sed -e 's/.*\(.\)\(.\)$/\1\2/'`
	cppfile="$filename$nr.cpp"
	CPPFILES="$CPPFILES $cppfile"
	cat $header > $cppfile
	cat $i >> $cppfile
	rm $i 
done

rm $header
echo $CPPFILES
