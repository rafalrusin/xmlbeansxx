if (WIN32)
  if (CMAKE_BUILD_TYPE STREQUAL Debug) 
    set(LIB_SUF "_3D")
  endif (CMAKE_BUILD_TYPE STREQUAL Debug) 
else (WIN32) 
  set(LIB_SUF "")
endif (WIN32)

FIND_PATH(XERCES_INCLUDE_DIR xercesc/util/PlatformUtils.hpp /usr/include /usr/local/include)
FIND_LIBRARY(XERCES_LIBRARY NAMES xerces-c${LIB_SUF} PATHS /usr/lib /usr/local/lib) 

IF (XERCES_INCLUDE_DIR AND XERCES_LIBRARY)
   SET(XERCES_FOUND TRUE)
ENDIF (XERCES_INCLUDE_DIR AND XERCES_LIBRARY)

IF (XERCES_FOUND)
   IF (NOT Xerces_FIND_QUIETLY)
      MESSAGE(STATUS "Found XERCES: ${XERCES_LIBRARY}")
   ENDIF (NOT Xerces_FIND_QUIETLY)
ELSE (XERCES_FOUND)
   IF (Xerces_FIND_REQUIRED)
      MESSAGE(FATAL_ERROR "Could not find Xerces")
   ENDIF (Xerces_FIND_REQUIRED)
ENDIF (XERCES_FOUND)
